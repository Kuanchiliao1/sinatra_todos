<section id="todos">
  <header>  
    <h2><%= @list[:name] %></h2>
  </header>
</section>

<a href="/lists">All lists</a>
<p><%= @list[:name] %></p>

<form action="/lists/:num" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="list_name" placehold="List Name" type="text" value="">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists">Cancel</a>
  </fieldset>
</form>